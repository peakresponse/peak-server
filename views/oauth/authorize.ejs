<%- contentFor('title') %><%= __('oauth.authorize.title') %>
<%- contentFor('bodyClass') %>unauthenticated
<%- contentFor('body') %>
<div class="container">
  <div class="row justify-content-center" role="main">
    <div class="col">
      <div class="logo my-5 pt-4">
        <img class="img-fluid" src="/images/logo-dark.png" alt="<%= __('peakresponse.logo') %>">
      </div>
      <p><b><%= client.name %></b> is requesting access to your account. Proceed?</p>
      <form method="post" action="/oauth/authorize">
        <input type="hidden" name="client_id" value="<%= client_id %>" />
        <input type="hidden" name="response_type" value="<%= response_type %>" />
        <input type="hidden" name="redirect_uri" value="<%= redirect_uri %>" />
        <div class="row justify-content-center">
          <div class="col-10">
            <div class="form-group">
              <button class="btn btn-primary btn-block" type="submit"><%= __('oauth.authorize.submit') %></button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
