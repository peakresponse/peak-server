{
  "name": "peak-server",
  "version": "2.0.0-alpha.18",
  "private": true,
  "scripts": {
    "start": "nodemon -V --ignore ./angular --ignore ./nemsis --ignore ./public  --ignore ./test --ignore ./tmp ./bin/www",
    "test": "mocha --unhandled-rejections=strict --recursive test/unit test/integration",
    "ci": "prettier --check . && npm run lint && npm run test",
    "lint": "eslint .",
    "lint:changed": "eslint $(git diff --name-only; git ls-files -o --exclude-standard)",
    "pp": "prettier --write .",
    "pp:changed": "prettier --write $(git diff --name-only; git ls-files -o --exclude-standard)"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "es2020": true,
      "mocha": true
    },
    "extends": [
      "plugin:mocha/recommended",
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "mocha",
      "prettier"
    ],
    "rules": {
      "mocha/no-mocha-arrows": [
        "off"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-restricted-syntax": [
        "error",
        {
          "selector": "ForInStatement",
          "message": "for..in loops iterate over the entire prototype chain, which is virtually never what you want. Use Object.{keys,values,entries}, and iterate over the resulting array."
        },
        {
          "selector": "LabeledStatement",
          "message": "Labels are a form of GOTO; using them makes code confusing and hard to maintain and understand."
        },
        {
          "selector": "WithStatement",
          "message": "`with` is disallowed in strict mode because it makes code impossible to predict and optimize."
        }
      ]
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "*.conf.js"
    ],
    "overrides": [
      {
        "files": [
          "public/scripts/**/*.js"
        ],
        "env": {
          "browser": true,
          "jquery": true
        }
      },
      {
        "files": [
          "migrations/*.js"
        ],
        "rules": {
          "no-unused-vars": [
            "error",
            {
              "argsIgnorePattern": "queryInterface|Sequelize"
            }
          ]
        }
      }
    ]
  },
  "mocha": {
    "timeout": 120000
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 140,
    "singleQuote": true
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "@googlemaps/google-maps-services-js": "^3.3.26",
    "@node-oauth/oauth2-server": "^4.3.0",
    "@popperjs/core": "^2.11.6",
    "ajv": "^6.12.6",
    "ajv-cli": "^3.1.0",
    "aws-sdk": "^2.1095.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "bootstrap": "^5.1.1",
    "bufferutil": "^4.0.1",
    "connect-flash": "^0.1.1",
    "cookie-session": "^1.3.3",
    "debug": "~2.6.9",
    "dotenv": "^6.2.0",
    "ejs": "~2.5.7",
    "email-templates": "^5.1.0",
    "express": "~4.17.1",
    "express-ejs-layouts": "^2.5.0",
    "express-fileupload": "^1.3.1",
    "fast-json-patch": "^3.0.0-1",
    "fs-extra": "^8.1.0",
    "http-errors": "~1.6.2",
    "http-status-codes": "^1.4.0",
    "i18n": "^0.8.3",
    "i18n-iso-countries": "^5.1.0",
    "inflection": "^1.12.0",
    "jquery": "^3.6.0",
    "jsondiffpatch": "^0.4.1",
    "line-by-line": "^0.1.6",
    "lodash": "^4.17.21",
    "luxon": "^2.3.1",
    "mime-types": "^2.1.24",
    "mkdirp": "^0.5.1",
    "mocha": "^9.2.2",
    "moment": "^2.24.0",
    "morgan": "~1.9.0",
    "mv": "^2.1.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.7",
    "node-stream-zip": "^1.9.1",
    "nodemon": "^2.0.15",
    "npm": "^6.14.16",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^8.2.1",
    "randomstring": "^1.2.3",
    "readline": "^1.3.0",
    "rollbar": "^2.21.1",
    "seedrandom": "^3.0.5",
    "sequelize": "^6.7.0",
    "sequelize-cli": "^6.4.1",
    "sequelize-fixtures": "^1.2.0",
    "sequelize-paginate": "^1.1.6",
    "shelljs": "^0.8.5",
    "smoothscroll-polyfill": "^0.4.4",
    "soap": "^0.43.0",
    "supertest": "^4.0.2",
    "supertest-session": "^4.0.0",
    "tmp": "^0.1.0",
    "utf-8-validate": "^5.0.2",
    "uuid": "^3.3.2",
    "validate-with-xmllint": "^1.2.0",
    "ws": "^7.5.0",
    "xlsx": "^0.18.4",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "foreman": "^3.0.1",
    "nock": "^12.0.3",
    "node-sass": "^4.14.1",
    "nodemailer-mock": "^1.5.1",
    "prettier": "^2.1.2",
    "superwstest": "^2.0.2"
  }
}
