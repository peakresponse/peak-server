{
  "name": "peak-server",
  "version": "2.0.0-alpha.70",
  "private": true,
  "scripts": {
    "start": "nodemon -V --ignore ./angular --ignore ./data --ignore ./nemsis --ignore ./public  --ignore ./test --ignore ./tmp ./bin/www",
    "test": "mocha --unhandled-rejections=strict --recursive test/unit test/integration",
    "ci": "prettier --check . && npm run lint && npm run test",
    "lint": "eslint .",
    "lint:changed": "eslint $(git diff --name-only -- '*.js'; git ls-files -o --exclude-standard -- '*.js')",
    "pp": "prettier --write .",
    "pp:changed": "prettier --write $(git diff --name-only -- '*.js' '*.ts' '*.html' '*.css' '*.scss' '*.json'; git ls-files -o --exclude-standard -- '*.js' '*.ts' '*.html' '*.css' '*.scss' '*.json')"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "es2020": true,
      "mocha": true
    },
    "extends": [
      "plugin:mocha/recommended",
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "mocha",
      "prettier"
    ],
    "rules": {
      "mocha/no-mocha-arrows": [
        "off"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-restricted-syntax": [
        "error",
        {
          "selector": "ForInStatement",
          "message": "for..in loops iterate over the entire prototype chain, which is virtually never what you want. Use Object.{keys,values,entries}, and iterate over the resulting array."
        },
        {
          "selector": "LabeledStatement",
          "message": "Labels are a form of GOTO; using them makes code confusing and hard to maintain and understand."
        },
        {
          "selector": "WithStatement",
          "message": "`with` is disallowed in strict mode because it makes code impossible to predict and optimize."
        }
      ]
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "*.conf.js"
    ],
    "overrides": [
      {
        "files": [
          "public/scripts/**/*.js"
        ],
        "env": {
          "browser": true,
          "jquery": true
        }
      },
      {
        "files": [
          "migrations/*.js"
        ],
        "rules": {
          "no-unused-vars": [
            "error",
            {
              "argsIgnorePattern": "queryInterface|Sequelize"
            }
          ]
        }
      }
    ]
  },
  "mocha": {
    "timeout": 120000
  },
  "prettier": {
    "bracketSameLine": true,
    "printWidth": 140,
    "singleQuote": true
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.750.0",
    "@aws-sdk/client-sts": "3.750.0",
    "@aws-sdk/cloudfront-signer": "^3.734.0",
    "@aws-sdk/s3-request-presigner": "3.750.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@googlemaps/google-maps-services-js": "^3.4.0",
    "@node-oauth/oauth2-server": "^5.2.0",
    "@scalar/express-api-reference": "^0.8.16",
    "basic-ftp": "^5.0.5",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "bufferutil": "^4.0.9",
    "connect-flash": "^0.1.1",
    "cookie-session": "^2.1.0",
    "debug": "~4.4.0",
    "dotenv": "^16.4.7",
    "ejs": "~3.1.10",
    "email-templates": "^12.0.1",
    "express": "^4.21.2",
    "express-ejs-layouts": "^2.5.1",
    "express-fileupload": "^1.5.1",
    "express-rate-limit": "^7.5.0",
    "fast-json-patch": "^3.1.1",
    "fs-extra": "^11.3.0",
    "http-errors": "~2.0.0",
    "http-status-codes": "^2.3.0",
    "i18n": "^0.15.1",
    "i18n-iso-countries": "^7.14.0",
    "inflection": "^3.0.2",
    "jquery": "^3.7.1",
    "jsonpath-plus": "^10.3.0",
    "line-by-line": "^0.1.6",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "mime-types": "^2.1.35",
    "mkdirp": "^3.0.1",
    "morgan": "~1.10.0",
    "node-cache": "^5.1.2",
    "node-expat": "^2.4.1",
    "node-stream-zip": "^1.15.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.3",
    "randomstring": "^1.3.1",
    "readline": "^1.3.0",
    "rollbar": "^2.26.4",
    "semver": "^7.7.1",
    "sequelize": "^6.37.5",
    "sequelize-cli": "^6.6.2",
    "sequelize-fixtures": "^1.2.0",
    "sequelize-paginate": "^1.1.6",
    "shelljs": "^0.8.5",
    "smoothscroll-polyfill": "^0.4.4",
    "soap": "^1.1.8",
    "tmp": "^0.2.3",
    "tmp-promise": "^3.0.3",
    "utf-8-validate": "^6.0.5",
    "uuid": "^11.0.5",
    "validate-with-xmllint": "^1.2.1",
    "ws": "^8.18.0",
    "xlsx": "^0.18.5",
    "xml-formatter": "^3.6.4",
    "xml-js": "^1.6.11",
    "zod": "^4.1.5",
    "zod-openapi": "^5.4.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-prettier": "^5.1.1",
    "foreman": "^3.0.1",
    "mocha": "^11.1.0",
    "nock": "^13.5.6",
    "nodemailer-mock": "^2.0.8",
    "nodemon": "^3.1.9",
    "prettier": "^3.1.1",
    "supertest": "^7.0.0",
    "supertest-session": "^5.0.1",
    "superwstest": "^2.0.4",
    "timekeeper": "^2.3.1",
    "undici": "^6.21.1"
  }
}
